<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.MainActivity"
    android:id="@+id/mainFrame"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/app_bar_main">


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_above="@id/adLayout"
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/cvScan"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:background="#CDDC39"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivScan"
                                android:src="@drawable/ic_scan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivScan"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvTitleScan"
                                android:textColor="#FFF"
                                android:text="Scan Photos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cvRestored"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:background="#FC104C"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivRestored"
                                android:src="@drawable/restore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivRestored"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvTitleRestored"
                                android:textColor="#FFF"
                                android:text="Restored Photos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/cvContactUs"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:background="#3949AB"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivContactUs"
                                android:src="@drawable/ic_contact_us"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivContactUs"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvTitleContactUs"
                                android:textColor="#FFF"
                                android:text="Contact Us"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cvShare"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:background="#FF5722"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivShare"
                                android:src="@drawable/ic_share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivShare"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvTitleShare"
                                android:textColor="#FFF"
                                android:text="Share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <android.support.v7.widget.CardView
                    android:id="@+id/cvRateApp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:background="#FFD740"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivRateApp"
                                android:src="@drawable/ic_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivRateApp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvTitleRateApp"
                                android:textColor="#FFF"
                                android:text="Rate App"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cvMoreApps"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    card_view:cardBackgroundColor="#FFFFFF"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="10dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:gravity="center"
                            android:background="#607D8B"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/ivMoreApps"
                                android:src="@drawable/ic_more_apps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_below="@id/ivMoreApps"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/tvMoreApps"
                                android:textColor="#FFF"
                                android:text="Get More Apps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/adLayout"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.gms.ads.AdView
                android:visibility="invisible"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5455259317336088/2834675383">
            </com.google.android.gms.ads.AdView>

            <LinearLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>